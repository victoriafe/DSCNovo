{% extends 'base.html.twig' %}

{% block title %}Detalhes da Mesa{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="text-center mb-4">Detalhes da Mesa</h1>

                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ table.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Número</th>
                        <td>{{ table.number }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Capacidade</th>
                        <td>{{ table.capacity }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_table_index') }}" class="btn btn-outline-secondary">Voltar à lista</a>
                    <a href="{{ path('app_table_edit', {'id': table.id}) }}" class="btn btn-outline-warning">Editar</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
