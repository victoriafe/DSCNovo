{% block stylesheets %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Detalhes do Usuário{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="text-center mb-4">Detalhes do Usuário</h1>

                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nome de Usuário</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Cargos</th>
                        <td>
                            {% if user.roles is empty %}
                                Nenhum cargo atribuído
                            {% else %}
                                {% for role in user.roles %}
                                    <span
                                        class="badge rounded-pill bg-primary me-1">{{ role|replace({'ROLE_': ''}) }}</span>
                                {% endfor %}
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Nome Completo</th>
                        <td>{{ user.name }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">Voltar à lista</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-warning">Editar</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
